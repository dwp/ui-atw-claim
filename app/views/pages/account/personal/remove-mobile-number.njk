{% extends "layouts/journey.njk" %}
{% from "casa/components/radios/macro.njk" import casaGovukRadios with context %}
{% from "govuk/components/breadcrumbs/macro.njk" import govukBreadcrumbs %}

{% block casaPageTitle %}
    {{ t('remove-mobile-number:pageTitle') }}
{% endblock %}

{% block journey_form %}

    {{ casaGovukRadios({
        classes: "govuk-radios--inline",
        idPrefix: "removingMobileNumber",
        name: "removingMobileNumber",
        casaValue: formData.removingMobileNumber,
        fieldset: {
            legend: {
                text: t('remove-mobile-number:h1'),
                isPageHeading: true,
                classes: "govuk-fieldset__legend--l"
            }
        },
        hint: {
             html: hintBlock | safe
        },
        casaErrors: formErrors,
        items: [
            {
                value: "yes",
                text: "Yes"
            },
            {
                value: "no",
                text: "No"
            }
        ]
    }) }}

{% endblock %}
