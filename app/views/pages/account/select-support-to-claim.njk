{% extends "layouts/journey.njk" %}

{% from "govuk/components/breadcrumbs/macro.njk" import govukBreadcrumbs %}
{% from "casa/components/radios/macro.njk" import casaGovukRadios with context %}

{% block casaPageTitle %}
    {{ t('select-support-to-claim:pageTitle') }}
{% endblock %}

{% block breadCrumbs %}
    {{ govukBreadcrumbs({
        items: [
            {
                text: t('account:breadcrumbs1'),
                href: ([accountBaseUrl, "/home"] | join)
            },
            {
                text: t('select-support-to-claim:breadcrumb'),
                href: ([claimBaseUrl, "/select-support-to-claim"] | join)
            }
        ]
    }) }}

{% endblock %}

{% block journey_form %}

    {% set data = [] %}
    {% for grant in grants -%}
    
        {% if grant.claimType === av %}
            {% set data = (data.push(
                {
                    value: grant.id,
                    text: t('common:claimTypes.av'),
                    hint: {
                    text: grant.company
                }
                }), data) %}
        {% endif %}

        {% if grant.claimType === ea %}
            {% set data = (data.push(
                {
                    value: grant.id,
                    text: t('common:claimTypes.ea'),
                    hint: {
                    text: grant.company
                }
                }), data) %}
        {% endif %}

        {% if grant.claimType === sw %}
            {% set data = (data.push(
                {
                    value: grant.id,
                    text: t('common:claimTypes.sw'),
                    hint: {
                    text: grant.company
                }
                }), data) %}
        {% endif %}

        {% if grant.claimType === ttw %}
            {% set data = (data.push(
                {
                    value: grant.id,
                    text: t('common:claimTypes.ttw'),
                    hint: {
                        text: grant.company
                    }
                }), data) %}
        {% endif %}

        {% if grant.claimType === tiw %}
            {% set data = (data.push(
                {
                    value: grant.id,
                    text: t('common:claimTypes.tiw'),
                    hint: {
                    text: grant.company
                }
                }), data) %}
        {% endif %}

    {% endfor %}
    {% if grants.length > 0 %}
    {% set data = (data.push(
        {
            divider: t('common:or')
        },
        {
            value: "other",
            text: t('common:other')
        }
    ), data) %}

    {{ casaGovukRadios({
        idPrefix: "selectSupportToClaim",
        name: "selectSupportToClaim",
        casaValue: formData.selectSupportToClaim,
        casaErrors: formErrors,
        fieldset: {
            legend: {
                text: t('select-support-to-claim:h1'),
                isPageHeading: true,
                classes: "govuk-fieldset__legend--l"
            }
        },
        hint: {
            html: hintBlock | safe
        },
        items: data
    }) }}
    {% endif %}

{% endblock %}
