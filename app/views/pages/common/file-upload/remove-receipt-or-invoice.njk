{% extends "layouts/journey.njk" %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% block casaPageTitle %}
    {{ t('remove-receipt-or-invoice:pageTitle') }}
{% endblock %}

{% block journey_form %}

    {{ govukRadios({
        classes: "govuk-radios--inline",
        idPrefix: "f-removingEntry",
        name: "removingEntry",
        casaValue: formData.removingEntry,
        fieldset: {
            legend: {
                text: t('remove-receipt-or-invoice:h1'),
                isPageHeading: true,
                classes: "govuk-fieldset__legend--l"
            }
        },
        items: [
            {
                value: "yes",
                text: t('remove-receipt-or-invoice:radioYes')
            },
            {
                value: "no",
                text: t('remove-receipt-or-invoice:radioNo')
            }
        ]
    }) }}

{% endblock %}
