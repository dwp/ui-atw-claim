{% extends "layouts/journey.njk" %}
{% from "casa/components/input/macro.njk" import casaGovukInput with context %}

{% block casaPageTitle %}
    {% if awardType == 'EA' %}
        {{ t('postcode-of-person-or-company-being-paid:ea.pageTitle') }}
    {% elif awardType == 'AV' %}
        {{ t('postcode-of-person-or-company-being-paid:av.pageTitle') }}
    {% elif awardType == 'SW' %}
        {{ t('postcode-of-person-or-company-being-paid:sw.pageTitle') }}
    {% elif awardType == 'TW' %}
        {{ t('postcode-of-person-or-company-being-paid:tw.pageTitle') }}
    {% elif awardType == 'TIW' %}
        {{ t('postcode-of-person-or-company-being-paid:tiw.pageTitle') }}
    {% endif %}
{% endblock %}


{% block journey_form %}

 <h1 class="govuk-heading-l" data-ga-question="{{ t('postcode-of-person-or-company-being-paid:h1-ga') }}">
     {{ t('postcode-of-person-or-company-being-paid:h1', payeeName) }}</h1>

    {{ casaGovukInput({
        label: {
            text: t('postcode-of-person-or-company-being-paid:inputs.postcode.label', payeeName),
            isPageHeading: false
        },
        hint: {
            text: t('postcode-of-person-or-company-being-paid:inputs.postcode.hint')
        },
        attributes: {
            "aria-required": true
        },
        classes:"govuk-input--width-10",
        name: "postcode",
        value: formData.postcode,
        casaErrors: formErrors,
        autocomplete: 'postal-code'
    }) }}

{% endblock %}
