{% extends "layouts/journey.njk" %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block casaPageTitle %}
    {{ t('submitted-support-worker:pageTitle') }}
{% endblock %}

{% block content_block %}

    {{ govukPanel({
        titleText: t('submitted-support-worker:h1'),
        html: t('submitted-support-worker:reference') + "<br><strong>"+ transactionId +"</strong>"
    }) }}
    <p class="govuk-body">{{ t('submitted-support-worker:p') }}</p>
    <h2 class="govuk-heading-m">{{ t('submitted-support-worker:whatNext.h2') }}</h2>

    <p class="govuk-body">{{ t('submitted-support-worker:whatNext.p1') }}</p>
    <p class="govuk-body">{{ t('submitted-support-worker:whatNext.p2') }}</p>
    
    <p class="govuk-body"> {{ t('submitted-support-worker:feedback.link', { url: feedbackFormDirectUrl }) | safe }}</p>

    {{ govukButton({
        text: BUTTON_TEXT,
        href: ([accountBaseUrl, "/home"] | join)
    }) }}

{% endblock %}
