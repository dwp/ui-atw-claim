{% extends "layouts/journey.njk" %}
{% from "casa/components/radios/macro.njk" import casaGovukRadios with context %}
{% from "govuk/components/breadcrumbs/macro.njk" import govukBreadcrumbs %}

{% block casaPageTitle %}
    {{ t('during-work-travel-claim:pageTitle') }}
{% endblock %}

{% block breadCrumbs %}
    {{ govukBreadcrumbs({
        items: [
            {
                text: t('during-work-travel-claim:breadcrumbs1'),
                href: ([accountBaseUrl, "/home"] | join)
            },
            {
                text: t('during-work-travel-claim:breadcrumbs2'),
                href: "during-work-travel-claim"
            }
        ]
    }) }}

{% endblock %}

{% block journey_form %}

    {{ casaGovukRadios({
        classes: "govuk-radios--inline",
        idPrefix: "claimingTravelInWork",
        name: "claimingTravelInWork",
        casaValue: formData.claimingTravelInWork,
        fieldset: {
            legend: {
                text: t('during-work-travel-claim:h1'),
                isPageHeading: true,
                classes: "govuk-fieldset__legend--l"
            }
        },
        casaErrors: formErrors,
        items: [
            {
                value: "yes",
                text: t('common:yes')
            },
            {
                value: "no",
                text: t('common:no')
            }
        ]
    }) }}

{% endblock %}
