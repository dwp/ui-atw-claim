{% extends "layouts/journey.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block casaPageTitle %}
    {{ t('grant-only-for-work-travel-costs:pageTitle') }}
{% endblock %}

{% block content_block %}

    <h1 class="govuk-heading-l">{{ t('grant-only-for-work-travel-costs:h1') }}</h1>
    <p class="govuk-body">
        {{ t('grant-only-for-work-travel-costs:p1') }}
    </p>

    <p class="govuk-heading-s">{{ t('grant-only-for-work-travel-costs:p2') }}</p>
    <ul class="govuk-list govuk-list--bullet">
        <li>{{ t('grant-only-for-work-travel-costs:telephone') }}</li>
        <li>{{ t('grant-only-for-work-travel-costs:textphone') }}</li>
        <li>{{ t('grant-only-for-work-travel-costs:relayLinkText', { url: 'https://www.relayuk.bt.com/' }) | safe }}</li>
        <li>{{ t('grant-only-for-work-travel-costs:link2', { url: 'https://connect.interpreterslive.co.uk/vrs?ilc=DWP' }) | safe }}
        {{ t('grant-only-for-work-travel-costs:bslUsers') }} 
        {{ t('grant-only-for-work-travel-costs:checkYouCanUseLinkText', { url: 'https://www.dalanguages.co.uk/dwp-bsl/' }) | safe }}</li>
    </ul>

    {{ govukButton({
        text: t('grant-only-for-work-travel-costs:homeBtn'),
        href: ([accountBaseUrl, "/home"] | join),
        isStartButton: false,
        id: "home-button",
        preventDoubleClick: true
    }) }}

{% endblock %}
