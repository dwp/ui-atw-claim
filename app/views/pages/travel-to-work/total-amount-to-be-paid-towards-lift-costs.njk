{% extends "layouts/journey.njk" %}

{% set heading %}
    {% if travelTotal === 1 %}
        {{ t('total-amount-to-be-paid-towards-lift-costs:h1MileageSingle') if journeysOrMileage ===  'mileage' else t('total-amount-to-be-paid-towards-lift-costs:h1JourneySingle') }}
    {% else %}
        {{ t('total-amount-to-be-paid-towards-lift-costs:h1MileageMultiple', travelTotal | round(1) ) if journeysOrMileage ===  'mileage' else t('total-amount-to-be-paid-towards-lift-costs:h1JourneyMultiple', travelTotal) }}
    {% endif %}
{% endset -%}

{% block casaPageTitle %}
    {% if travelTotal === 1 %}
        {{ t('total-amount-to-be-paid-towards-lift-costs:pageTitleMileageSingle' ) if journeysOrMileage ===  'mileage' else t('total-amount-to-be-paid-towards-lift-costs:pageTitleJourneySingle') }}
    {% else %}
        {{ t('total-amount-to-be-paid-towards-lift-costs:pageTitleMileageMultiple', travelTotal | round(1) ) if journeysOrMileage ===  'mileage' else t('total-amount-to-be-paid-towards-lift-costs:pageTitleJourneyMultiple', travelTotal) }}
    {% endif %}
{% endblock %}

{% block journey_form %}
    <h1 class="govuk-heading-l">
        {{ heading }}
    </h1>
    <p class="govuk-body">{{ t('total-amount-to-be-paid-towards-lift-costs:p1') }}</p>
    <p class="govuk-body">{{ t('total-amount-to-be-paid-towards-lift-costs:p2') }}</p>

     <ul class="govuk-list govuk-list--bullet govuk-list--spaced">
        <li>{{ t('total-amount-to-be-paid-towards-lift-costs:ul.li1') }}</li>
        <li>{{ t('total-amount-to-be-paid-towards-lift-costs:ul.li2') }}</li>
    </ul>

{% endblock %}
