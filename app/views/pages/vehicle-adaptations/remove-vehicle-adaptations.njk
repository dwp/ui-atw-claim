{% extends "layouts/journey.njk" %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% block casaPageTitle %}
    {{ t('remove-vehicle-adaptations:pageTitle') }}
{% endblock %}

{% block journey_form %}

    <input type="hidden" name="removeId" value={{ removeId }}>
    {% set description = summaryPageData[removeId].claimDescription[0].description %}

    {{ govukRadios({
        classes: "govuk-radios--inline",
        idPrefix: "f-removeVehicleAdaptation",
        name: "removeVehicleAdaptation",
        casaValue: formData.removeVehicleAdaptation,
        fieldset: {
            legend: {
                text: t('remove-vehicle-adaptations:h1', description),
                isPageHeading: true,
                classes: "govuk-fieldset__legend--l"
            }
        },
        items: [
            {
                value: "yes",
                text: t('remove-vehicle-adaptations:radioYes')
            },
            {
                value: "no",
                text: t('remove-vehicle-adaptations:radioNo')
            }
        ]
    }) }}

{% endblock %}
